<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/house5">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:gravity="center"
            android:id="@+id/appTitle"
            android:text="mKeja App"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/appslogan"

            android:text="Your House Finder solution in Campus"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/BtnstartApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:shadowColor="@android:color/black"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/elipse"
            android:layout_margin="50dp"
            android:text="CONTNUE TO APP" />
    </LinearLayout>

</RelativeLayout>